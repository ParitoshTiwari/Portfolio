@page "/"

<PageTitle>Portfolio</PageTitle>

<Row Height=Height.Is25>
    <Column ColumnSize=ColumnSize.Is6.OnDesktop.Is12.OnMobile>
        <Card>
            <CardImage Source="@utdImage"></CardImage>
            <CardBody> 
                <CardTitle Size="5">About Me</CardTitle>
                <CardText Style="word-wrap: break-word;">
                    I am Paritosh Tiwari. I am a graduate student at The University of Texas at Dallas majoring in Information Technology and Management.
                    Currently I am in my first year and learning Business Analytics with R, Advance Statistics and Business Analysis and Database foundations for
                    Business analytics.
                </CardText>
            </CardBody>
        </Card>
    </Column>
    <Column ColumnSize=ColumnSize.Is6.OnDesktop.Is12.OnMobile>
        <Card>
            <CardImage Source="@FidelityImage"></CardImage>
            <CardBody>
                <CardTitle Size="5">Work Experience</CardTitle>
                <CardText>
                    I have 4.3 years of working experience as a Software Developer at Fidelity National Financial, India where
                    I have worked on multiple projects involving Microsoft Technologies.
                </CardText>
            </CardBody>
        </Card>
    </Column>
    </Row>
    <Row Height=Height.Is25>
    <Column ColumnSize=ColumnSize.Is6.OnDesktop.Is12.OnMobile>
        <Card>
            <CardBody>
                <CardTitle Size="5">Education Background</CardTitle>
                    <EducationChart></EducationChart>
            </CardBody>
        </Card>
    </Column>
    <Column ColumnSize=ColumnSize.Is6.OnDesktop.Is12.OnMobile>
        <Card>
            <CardBody>
                <CardTitle Size="5">Interests</CardTitle>
                <CardImage Source="@poolImage" Style="height: 215px;"></CardImage>
                <CardText>
                    My interests include creating innovative solutions with the help of technology. I have great interest in full-stack development and learning
                    new technologies. I like playing 8-ball pool and bike riding.
                </CardText>
            </CardBody>
        </Card>
    </Column>
</Row>

@code{
    /// <summary>
    /// To Display image of UTD
    /// </summary>
    public string utdImage = "./Images/UTD-Drive.jpg";

    /// <summary>
    /// To Display Fidelity Image
    /// </summary>
    public string FidelityImage = "./Images/fid.jpg";

    /// <summary>
    /// To display Pool Image
    /// </summary>
    public string poolImage = "./Images/EightBallPool.jpg";
}